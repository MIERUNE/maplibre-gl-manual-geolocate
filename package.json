{
  "name": "@mierune/maplibre-gl-manual-geolocate",
  "version": "0.1.0",
  "description": "A MapLibre GL JS control that displays a user position marker at specified coordinates without requiring the browser's geolocation API",
  "type": "module",
  "license": "MIT OR Apache-2.0",
  "author": "MIERUNE Inc.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MIERUNE/maplibre-gl-manual-geolocate.git"
  },
  "homepage": "https://maplibre-gl-manual-geolocate.mierune.dev/",
  "bugs": {
    "url": "https://github.com/MIERUNE/maplibre-gl-manual-geolocate/issues"
  },
  "keywords": [
    "maplibre",
    "maplibre-gl"
  ],
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/maplibre-gl-manual-geolocate.umd.cjs",
  "module": "./dist/maplibre-gl-manual-geolocate.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/maplibre-gl-manual-geolocate.js",
      "require": "./dist/maplibre-gl-manual-geolocate.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build --config vite.config.lib.ts",
    "build:demo": "vite build --config vite.config.demo.ts",
    "preview": "vite preview",
    "preview:demo": "vite preview --config vite.config.demo.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "prepare": "husky"
  },
  "peerDependencies": {
    "maplibre-gl": ">=5.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.3",
    "maplibre-gl": "^5.7.1",
    "typescript": "~5.8.3",
    "vite": "^7.1.2",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,css}": "biome check --write --no-errors-on-unmatched"
  }
}
